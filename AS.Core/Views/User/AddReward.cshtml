@model AddRewardViewModel

@{
    ViewBag.Title = "Add Reward";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Create</title>
</head>
<body>
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Index</a></li>
            <li class="breadcrumb-item active">Add Reward</li>
        </ol>
    </nav>
</div>
<h4>User</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="AddReward" method="post">
            <input asp-for="UserId" type="hidden" value="@Model.UserId"/>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Options</label>
                </div>
                <select class="custom-select" id="inputGroupSelect01"
                        asp-for="RewardId"
                        asp-items="@(new SelectList(Model.Rewards, "Id", "Title"))">
                </select>
            </div>
            <span asp-validation-for="RewardId" class="text-danger"></span>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Add"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>


